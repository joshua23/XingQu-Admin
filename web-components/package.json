{
  "name": "@xingqu/web-components",
  "version": "1.0.0",
  "description": "星趣App后台管理系统 - 组件化Web界面",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:shared && vite build",
    "build:shared": "cd shared && npm run build",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "deploy": "npm run build && vercel --prod",
    "dev:components": "concurrently \"npm run dev:dashboard\" \"npm run dev:user-mgmt\" \"npm run dev:moderation\"",
    "dev:dashboard": "cd components/dashboard && npm run dev",
    "dev:user-mgmt": "cd components/user-management && npm run dev",
    "dev:moderation": "cd components/content-moderation && npm run dev"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@xingqu/shared": "file:./shared",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "tailwindcss": "^3.3.6",
    "autoprefixer": "^10.4.16",
    "swr": "^2.2.4",
    "lucide-react": "^0.294.0",
    "date-fns": "^2.30.0",
    "recharts": "^2.8.0",
    "react-hook-form": "^7.48.2",
    "@hookform/resolvers": "^3.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  },
  "workspaces": [
    "components/*",
    "shared"
  ]
}